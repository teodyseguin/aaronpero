{% set image_src = '../../../assets/images/portrait-home.png' %}

{% if image %}
  {% set image_src = image %}
{% endif %}

<div class="aaronpero-quote-image flex">
  <div class="highlight-text w-1/2 relative">
    {% if quote_text %}
      {{ quote_text|raw }}
    {% else %}
      <p>
        Marketing is telling a story<br />
        about your home that resonate<br />
        enough with buyers that they<br />
        purchase your property
      </p>
    {% endif %}
  </div>
  <div class="highlight-img w-1/2">
    <img src="{{ image_src }}" alt="">
  </div>
</div>
